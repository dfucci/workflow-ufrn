package br.gov.dpf.epol.cenario;

import org.jboss.seam.Component;
import org.jboss.seam.annotations.Install;
import org.jboss.seam.annotations.Name;
import org.jboss.seam.annotations.Observer;

/**
 * Classe responsável por popular o BD, após a inicialização do Seam, com todos
 * os cenários
 * 
 * @author Raquel Guimarães
 * @since 0.2a
 */
@Name("populaCenario")
@Install(precedence = Install.APPLICATION)
public class PopulaCenario {

	@Observer("org.jboss.seam.postInitialization")
	public void popula() {
		GrupoCenario cenario = new GrupoCenario(
				(CenarioDadosFixos) Component.getInstance("cenarioDadosFixos"),
				(CenarioCasoFaseAnalise) Component
						.getInstance("cenarioCasoFaseAnalise"),
				(CenarioCasoFaseDistribuicao) Component
						.getInstance("cenarioCasoFaseDistribuicao"),
				(CenarioCasoFaseFinalizacao) Component
						.getInstance("cenarioCasoFaseFinalizacao"),
				(CenarioCasoFaseInstauracao) Component
						.getInstance("cenarioCasoFaseInstauracao"),
				(CenarioCasoFinalizado) Component
						.getInstance("cenarioCasoFinalizado"),
				(CenarioCasoApensamento) Component
						.getInstance("cenarioCasoApensamento"),
				(CenarioNotificacoes) Component
						.getInstance("cenarioNotificacoes")
						);
		cenario.popula();
	}

}
